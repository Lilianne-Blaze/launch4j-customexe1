<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.example</groupId>
    <artifactId>launch4j-customexe1-demo2</artifactId>
    <version>0.0.3-SNAPSHOT</version>
    <packaging>jar</packaging>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
        <maven.compiler.release>8</maven.compiler.release>
        <exec.mainClass>com.example.launch4j_customexe1_demo2.Launch4jCustomexe1Demo2</exec.mainClass>
    </properties>
    
    <dependencies>
        
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>1.18.30</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>2.0.9</version>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <version>1.4.14</version>
            <optional>true</optional>
        </dependency>
        
    </dependencies>
    
    <build>
        <plugins>
            
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.5.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>${exec.mainClass}</mainClass>
                                </transformer>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            
            <plugin>
                <groupId>com.akathist.maven.plugins.launch4j</groupId>
                <artifactId>launch4j-maven-plugin</artifactId>
                <version>2.5.0</version>
                <dependencies>
                    <dependency>
                        <groupId>net.sf.launch4j</groupId>
                        <artifactId>launch4j</artifactId>
                        <version>3.50-customexe1</version>
                        <classifier>core</classifier>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <id>primary</id>
                        <goals>
                            <goal>launch4j</goal>
                        </goals>
                        <configuration>
                            <headerType>customExe</headerType>
                            <requireAdminRights>false</requireAdminRights>
                            <vars>
                                <var>launch4j.customExe=${customExe}</var>
                                <var>launch4j.keepTempFiles=true</var>
                                <var>customexe2.var1=212121</var>
                                <var>customexe2.var2=two</var>
                                <var>customexe2.var3=true</var>
                                <!--<var>sling4j.dump=envVars,rcStrings,javaVars</var>-->
                                <var>sling4j.dump=rcStrings,javaVars</var>
                            </vars>
                            <jre>
                                <minVersion>8</minVersion>
                                <maxVersion>17</maxVersion>
                                <requiresJdk>false</requiresJdk>
                                <requires64Bit>true</requires64Bit>
                            </jre>
                        </configuration>
                    </execution>
                    <execution>
                        <id>l4j-old-console</id>
                        <goals>
                            <goal>launch4j</goal>
                        </goals>
                        <configuration>
                            <outfile>${project.build.directory}/${project.artifactId}-old-console.exe</outfile>
                            <headerType>console</headerType>
                            <requireAdminRights>false</requireAdminRights>
                            <jre>
                                <minVersion>8</minVersion>
                            </jre>
                            <vars>
                                <var>launch4j.customExe=${customExe}</var>
                                <var>launch4j.keepTempFiles=true</var>
                            </vars>                        
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <vars>
                        <var>sharedvar1=test1</var>
                        <var>sharedvar2=test2</var>
                    </vars>
                </configuration>
            </plugin>
            
        </plugins>
    </build>
    
</project>
